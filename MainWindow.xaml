<Window x:Class="StudentProgressTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Progress Tracker" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Student Progress Tracker" FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,10" Grid.Row="0"/>

        <!-- DataGrid for Displaying Students -->
        <DataGrid x:Name="StudentDataGrid"
                  ItemsSource="{Binding Students}"
                  SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="200"
                  Margin="10" Grid.Row="1" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding StudentId}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                <DataGridTextColumn Header="Grade" Binding="{Binding Grade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                <DataGridTextColumn Header="Marks" Binding="{Binding Marks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Attendance (%)" Binding="{Binding AttendancePercentage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.Row="2" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Filter by Grade:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="GradeFilterComboBox" Width="120"
                          ItemsSource="{Binding Grades}"
                          SelectedItem="{Binding SelectedGrade}"
                          Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Filter by Subject:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="SubjectFilterComboBox" Width="150"
                          ItemsSource="{Binding Subjects}"
                          SelectedItem="{Binding SelectedSubject}"
                          Margin="5"/>
            </StackPanel>

            <Button Content="Apply Filter" Command="{Binding FilterStudentsCommand}" Width="120" Height="35" Margin="10"/>
        </StackPanel>

        <!-- Input Fields for Adding/Editing a Student -->
        <Border BorderThickness="1" BorderBrush="Gray" Padding="15" CornerRadius="5" Background="White" Grid.Row="3">
            <StackPanel Orientation="Vertical" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <TextBlock Text="Name:" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="0" Margin="5"/>
                    <TextBox Text="{Binding SelectedStudent.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="1" Margin="5" Width="250"/>

                    <!-- Grade -->
                    <TextBlock Text="Grade:" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="1" Margin="5"/>
                    <ComboBox SelectedItem="{Binding SelectedStudent.Grade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Grades}"
                              Grid.Column="1" Margin="5" Width="250"/>

                    <!-- Subject -->
                    <TextBlock Text="Subject:" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="2" Margin="5"/>
                    <ComboBox SelectedItem="{Binding SelectedStudent.Subject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Subjects}"
                              Grid.Column="1" Margin="5" Width="250"/>

                    <!-- Marks -->
                    <TextBlock Text="Marks:" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="3" Margin="5"/>
                    <TextBox Text="{Binding SelectedStudent.Marks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="1" Margin="5" Width="250"/>

                    <!-- Attendance -->
                    <TextBlock Text="Attendance (%):" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="4" Margin="5"/>
                    <TextBox Text="{Binding SelectedStudent.AttendancePercentage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="1" Margin="5" Width="250"/>
                </Grid>

                <!-- Buttons for CRUD Operations -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Add" Command="{Binding AddStudentCommand}" Width="100" Height="35" Margin="5"/>
                    <Button Content="Update" Command="{Binding UpdateStudentCommand}" Width="100" Height="35" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteStudentCommand}" Width="100" Height="35" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Progress Bar -->
        <ProgressBar x:Name="LoadingProgressBar" Width="400" Height="20"
                     VerticalAlignment="Bottom" Margin="10"
                     IsIndeterminate="True" Visibility="Hidden"/>
    </Grid>
</Window>
